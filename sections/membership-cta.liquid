<section class="cta membership container text-light" id="cta-shop-{{ section.settings.membership_cta_id }}">
  <div class="row">
  <div class="background" style="background: url({{ section.settings.membership_cta_image | img_url: '1440x' }}) no-repeat center center; background-size: cover;"></div>
    <div class="col-sm-12">
        <p class="subtitle">{{ section.settings.membership_cta_subtitle }}</p>
        <h2 class="h1">{{ section.settings.membership_cta_heading_line_one }}</h2>
        <h2 class="f-160">{{ section.settings.membership_cta_heading_line_two }}</h2>
        <h2 class="h1">{{ section.settings.membership_cta_heading_line_three }}</h2>

        <div class="button-wrapper align-center">
          <a class="regular-button pink" href="{{ section.settings.membership_cta_button_url }}" target="_self">
            <span class="text">{{ section.settings.membership_cta_button_text }}</span>
          </a>
        </div>

    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Membership CTA",
    "settings": [
      {
        "id": "membership_cta_id",
        "type": "text",
        "label": "Section ID",
        "default": "home",
        "info": "Please don't change"
      },
       {
        "id": "membership_cta_subtitle",
        "type": "text",
        "label": "Subtitle",
        "default": "kinrgy store"
      },
      {
        "id": "membership_cta_heading_line_one",
        "type": "text",
        "label": "Heading Line One",
        "default": "heading"
      },
      {
        "id": "membership_cta_heading_line_two",
        "type": "text",
        "label": "Heading Line Two",
        "default": "heading"
      },
      {
        "id": "membership_cta_heading_line_three",
        "type": "text",
        "label": "Heading Line Three",
        "default": "heading"
      },
      {
        "id": "membership_cta_button_text",
        "type": "text",
        "label": "Button Text",
        "default": "shop"
      },
      {
        "id": "membership_cta_button_url",
        "type": "url",
        "label": "Button Url"
      },
      {
        "id": "membership_cta_image",
        "type": "image_picker",
        "label": "Image"
      }
    ]
  }
{% endschema %}

